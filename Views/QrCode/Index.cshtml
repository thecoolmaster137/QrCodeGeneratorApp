@model QrCodeGeneratorApp.Models.QrCodeModel
@{
    ViewData["Title"] = "QR Code Generator";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/homepage.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center">
    <div class="glass-card col-md-6">
        <h2 class="text-center mb-4">ğŸš€ QR Code Generator</h2>

        <form method="post" asp-action="Generate">
            <div class="mb-3">
                <label for="text" class="form-label">ğŸ”¤ Enter Text</label>
                <input type="text" class="form-control" id="text" name="Text" required value="@Model.Text" />
            </div>
            <div class="mb-3">
                <label class="form-label">ğŸ–¼ï¸ Select Format</label>
                <select class="form-select" name="Format">
                    <option value="png" selected>PNG</option>
                    <option value="jpg">JPG</option>
                    <option value="bmp">BMP</option>
                </select>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">âš™ï¸ Generate QR</button>
            </div>
        </form>

        @if (Model.QrCodeImage != null)
        {
            <div class="text-center mt-4">
                <h5>ğŸ¯ Generated QR Code:</h5>
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.QrCodeImage)" class="img-thumbnail mt-2" style="max-width: 250px;" />
                <div class="mt-3">
                    <a class="btn btn-success" href="@Url.Action("Download", new { format = Model.Format, text = Model.Text })" target="_blank">â¬‡ï¸ Download @Model.Format.ToUpper()</a>
                </div>
            </div>
        }
    </div>
</div>
